<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/buttonHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/ic_baseline_history_24"
                android:backgroundTint="@color/black"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#CFD8DC"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:weightSum="65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <!--     Row 1 Starts From Here -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@null"
                android:gravity="end"
                android:textColor="#000000"
                android:textSize="40sp"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="#FFFFFF"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:background="@null"
                android:gravity="end"
                android:inputType="number"
                android:textColor="#000000"
                android:textSize="40sp"
                android:typeface="monospace" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:backgroundTint="#CFD8DC"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/buttonclear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_span="2"
                android:backgroundTint="#105BC0"
                android:text="Clr"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_span="2"
                android:backgroundTint="#105BC0"
                android:src="@drawable/ic_baseline_backspace_24"
                android:textSize="35sp"
                android:typeface="monospace"
                app:tint="#ffffff" />

        </TableRow>

        <!--     Row 2 Starts From Here -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />


            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_span="1"
                android:backgroundTint="#105BC0"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

        </TableRow>


        <!--     Row 4 Starts From Here -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />


            <Button
                android:id="@+id/buttonSubtraction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#105BC0"
                android:text="-"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />
        </TableRow>


        <!--     Row 5 Starts From Here -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"
                android:layout_span="1"

                android:backgroundTint="#00B9EF"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#105BC0"
                android:text="*"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

        </TableRow>


        <!--     Row 6 Starts From Here -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/buttonPoint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonZero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#00B9EF"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:layout_span="1"
                android:backgroundTint="#105BC0"
                android:text="/"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:typeface="monospace" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>